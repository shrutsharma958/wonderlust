<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
    <div class="col-8 offset-2">
    <body>
        <h1>Edit Listing</h1>
        <form action="/listing/<%=list._id %>" method="post"  novalidate class="needs-validation">
            <div>
                <label for="title" class="form-label">Title:</label>
                <input type="text" name="title" value="<%= list.title %>" class="form-control" required>
                <div class="valid-feedback">Looks good</div>
            </div>
            <div>
                <label for="description" class="form-label">Description:</label>
                <input type="text" name="description" value="<%= list.description %>"class="form-control"required >
                <div class="invalid-feedback">Enter a short description </div>
            </div>
           <div>
            <label for="image" class="form-label">Image:</label>
             <input type="text" name="image" value="<%= list.image %>"class="form-control" >
           </div>
           <div>
            <label for="price" class="form-label">Price:</label>
             <input type="number" name="price" value=" <%= list.price %>"class="form-control"required>
             <div class="invalid-feedback">Enter a valid price</div>
           </div>
            <div>
                <label for="location" class="form-label">Location:</label>
                <input type="text" name="location" value="<%= list.location %>"class="form-control"required>
            </div>
           
           <div>
            <label for="country" class="form-label">Country:</label>
            Country: <input type="text" name="country" value="<%= list.country %>"class="form-control"required>
           </div>

           <br><br>
           
            <button class="new-btn btn btn-dark ">Save it</button>
    </body>
</div>
</div>