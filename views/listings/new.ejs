<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
<div class="col-8 offset-2" >

<body>
    <h1>Add New Listing</h1>
    <form action="/listing" method="post" novalidate class="needs-validation" enctype="multipart/form-data"><br>
        <div>
            <label for="title" class="form-label">Title:</label>
            <input type="text" name="title" class="form-control" required>
            <div class="valid-feedback">Looks good</div>
        </div>
    <div>
        <label for="description" class="form-label">Description:</label>
        <input type="text" name="description"  class="form-control"required>
        <div class="invalid-feedback">Enter a short description </div>
    </div>
    <div>
        <label for="image" class="form-label">Image:</label>
        <input type="file" name="image" class="form-control" >
    </div>
    <div>
        <label for="price" class="form-label">Price:</label>
        <input  name="price" class="form-control"required>
        <div class="invalid-feedback">Enter a valid price</div>
    </div>
    <div class="row">
  <div class="col">
    <label for="location" class="form-label">Location:</label>
     <input type="text" name="location"  class="form-control"required>
  </div>
  <div class="col">
        <label for="country" class="form-label">Country:</label>
        <input type="text" name="country" class="form-control"required>
    </div>
</div>
   <br><br>
    <button class="btn btn-dark new-btn">Save it</button>
</form>
    
</body>
</div>
</div>
<br><br>